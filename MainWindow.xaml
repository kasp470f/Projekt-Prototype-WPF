<Window x:Class="Prototype_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prototype_WPF"
        xmlns:uc="clr-namespace:Prototype_WPF.Views.Partials"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>
        <StackPanel>
            <uc:Header Panel.ZIndex="1" Loaded="Header_Loaded"/>
            <Frame Content="{Binding PageContent}" Name="PageContentFrame" NavigationUIVisibility="Hidden"></Frame>
        </StackPanel>
    </Grid>
</Window>
