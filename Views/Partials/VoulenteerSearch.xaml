        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10,20,10,30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <StackPanel Height="80" Margin="0,0,0,30" Grid.Row="0">
                    <Border CornerRadius="25" Background="#FFFFFF" Height="80">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <Image RenderOptions.BitmapScalingMode="HighQuality" Height="60" Width="60" Source="..\..\Images/search.png" />
                            </StackPanel>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="-20,0,0,0">
                                <TextBlock FontSize="22" Text="Indtast søgeord" Foreground="Gray"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
                <StackPanel Height="200" Margin="0,0,0,30" Grid.Row="1">
                    <Border CornerRadius="25" Background="#00887A" Height="200" >
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="5" Color="#FFFFFF" Direction="-90"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="0" Margin="10,10,10,10">
                                <Border Margin="0,0,0,0" CornerRadius="40" Background="White" Padding="3">
                                    <Image RenderOptions.BitmapScalingMode="HighQuality" Height="80" Width="80" Source="..\..\Images/Men-Profile-Image-715x657.png" />
                                </Border>
                            </StackPanel>

                            <StackPanel VerticalAlignment="Top" Grid.Column="1" Margin="0,10,0,0">
                                <StackPanel HorizontalAlignment="Left">
                                    <TextBlock FontSize="19" Text="Martin Andersen, 36 år" Foreground="White" FontWeight="Bold" Margin="6,0,0,0"/>
                                    <TextBlock FontSize="17" Padding="0,8,8,0" TextWrapping="Wrap" 
                                               Text="Som person er jeg altid åben overfor nye input. Jeg fungerer godt i grupper, men jeg arbejder også
rigtig godt selvstændigt. Jeg er ansvarsbevidst og kan hurtigt tilegne mig ny viden og er nysgerrig. Jeg
har evnen til at tilpasse mig til nye opgaver ... Læs mere" 
                                               Foreground="White" Margin="6,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Right" Grid.Column="1" Margin="0,10,20,0">
                                <TextBlock FontSize="19" Text="Viborg" Foreground="White" FontWeight="Bold" Margin="6,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
                <StackPanel Height="200" Margin="0,0,0,30" Grid.Row="2">
                    <Border CornerRadius="25" Background="#77A6F7" Height="200">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="0" Margin="10,10,10,10">
                                <Border Margin="0,0,0,0" CornerRadius="40" Background="White" Padding="3">
                                    <Image RenderOptions.BitmapScalingMode="HighQuality" Height="80" Width="80" Source="..\..\Images/Men-Profile-Image-715x657.png" />
                                </Border>
                            </StackPanel>

                            <StackPanel VerticalAlignment="Top" Grid.Column="1" Margin="0,10,0,0">
                                <StackPanel HorizontalAlignment="Left">
                                    <TextBlock FontSize="19" Text="Martin Andersen, 36 år" Foreground="White" FontWeight="Bold" Margin="6,0,0,0"/>
                                    <TextBlock FontSize="17" Padding="0,8,8,0" TextWrapping="Wrap" 
