      xmlns:local="clr-namespace:Prototype_WPF.Views.Partials"
      mc:Ignorable="d" 
      d:DesignHeight="1005" d:DesignWidth="1920"
      Title="VoulenteerSearch">

    <Grid Background="#D3E3FC">

        <Grid.RowDefinitions>
            <RowDefinition  Height="2*"/>
